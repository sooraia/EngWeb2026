extends layout

block content
  .w3-card-4 <!-- div -->
    header.w3-container.w3-teal
      h1 Estatísticas dos Exames Médicos Desportivos

  each dist, label in stats
    .w3-container
      table.w3-table-all.w3-margin-top(style="table-layout:fixed;")
          tr
            th= String(label).charAt(0).toUpperCase() + String(label).slice(1)
            th Número de Registos
          each item, label2 in dist
              tr
                  td= label2
                  td= item

  footer
    a.w3-btn.w3-teal.w3-margin(href="/") Voltar