extends layout 

block content
  .w3-card-4 <!-- div -->
    header.w3-container.w3-teal
      h1 Exame Médico Desportivo de #{emd.primeiro_nome + ' ' + emd.sobrenome}
    .w3-container
      table.w3-table-all.w3-margin-top
        tr
          th Nome 
          td= emd.primeiro_nome + ' ' + emd.sobrenome
        tr
          th Data
          td= emd.dataEMD
        tr
          th Idade
          td= emd.idade
        tr
          th Género
          td= emd.género
        tr
          th Morada
          td= emd.morada
        tr
          th Modalidade
          td= emd.modalidade
        tr
          th Clube
          td= emd.clube
        tr
          th Email
          td= emd.email
        tr
          th Federado
          td= emd.federado ? 'Sim' : 'Não'
        tr
          th Resultado
          if emd.resultado
            td Apto 
              span(style='color:green') &#10004
          else 
            td Não Apto 
              span(style='color:red') &#10008 
    footer
      a.w3-btn.w3-teal.w3-margin(href="/") Voltar